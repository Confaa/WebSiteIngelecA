    }
    .bussiness__location-title{
      font-size: 1.5rem;
    }
  }

  /* iPhone 12 Pro (390x844) */
  @media (min-width: 375px) and (max-width: 390px) and (max-height: 844px) {

    .bussiness__contain{
      grid-template-columns: 1fr;
    }
    .bussiness__background{
      display:none;
    }
    .bussiness__location-title{
      font-size: 1.5rem;
    }
  }

  /* iPad (768x1024) */
  @media (min-width: 415px) and (max-width: 768px) and (max-height: 1024px) {

    .bussiness__contain{
      grid-template-columns: 1fr;
    }
    .bussiness__background{
      display:none;
    }
    .bussiness__location-title{
      font-size: 1.5rem;
    }
  }

  /* iPad Pro (1024x1366) */
  @media (min-width: 769px) and (max-width: 1024px) and (max-height: 1366px) {
 
    .bussiness__contain{
      grid-template-columns: 1fr;
    }
    .bussiness__background{
      display:none;
    }
    .bussiness__location-title{
      font-size: 1.5rem;
    }
  }

  /* HD (1366x768) */
  @media (min-width: 1025px) and (max-width: 1366px) and (max-height: 768px) {
   .bussiness__rectangle{
    display: block;
    left: -15%;
    bottom: -12.5%;
   }
   .bussiness__img{
    display: none;
   }
   .bussiness__location-title{
    font-size: 2rem;
   }
  }

  /* MacBook Pro (1440x900) */
  @media (min-width: 1367px) and (max-width: 1440px) and (max-height: 900px) {
  .bussiness__rectangle{
    display: block;
    left: -15%;
    bottom: -20%;
  }
  .bussiness__img{
    display: none;
  }
  .bussiness__location-title{
    font-size: 2rem;
  }
  }

  /* Full HD (1920x1080) */
  @media (min-width: 1441px) and (max-width: 1920px) and (max-height: 1080px) {
   .bussiness__rectangle{
    display: block;
    left: -10%;
    bottom: -12.5%;
   }
   .bussiness__img{
    display: none;
   }
   .bussiness__location-title{
    font-size: 2.5rem;
   }
  }
</style>
