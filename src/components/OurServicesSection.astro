---
import { Image, Picture } from 'astro:assets';
import store from '../assets/svg/store.svg';
import handshake from '../assets/svg/handshake.svg';
import blocks from '../assets/svg/blocks.svg';
import circuitBoard from '../assets/svg/circuitBoard.svg';
import zap from '../assets/svg/zap.svg';
import wegBlanco from '../assets/svg/wegBlanco.svg';
import check from '../assets/svg/check.svg';
import undrawCertificate from '../assets/png/undrawCertificate.png';
---

<section class="our-services" id="servicios">
  <h2 class="our-services__title">NUESTROS SERVICIOS</h2>

  <div class="our-services__cards">
    <span class="our-services__card">
      <Image src={store} class="our-services__card-svg" alt="Icono" />
      <p class="our-services__card-text">Venta de insumos eléctricos</p>
    </span>
    <span class="our-services__card">
      <Image src={handshake} class="our-services__card-svg" alt="Icono" />
      <p class="our-services__card-text">
        Asesoría profesional en electricidad industrial
      </p>
    </span>
    <span class="our-services__card">
      <Image src={blocks} class="our-services__card-svg" alt="Icono" />
      <p class="our-services__card-text">
        Armado de tableros eléctricos a medida
      </p>
    </span>
    <span class="our-services__card">
      <Image src={circuitBoard} class="our-services__card-svg" alt="Icono" />
      <p class="our-services__card-text">
        Reparación de variadores de frecuencia y arranque suave
      </p>
    </span>
    <span class="our-services__card">
      <Image src={zap} class="our-services__card-svg" alt="Icono" />
      <p class="our-services__card-text">
        Reparación de motores eléctricos monofásicos y trifásicos
      </p>
    </span>
  </div>
  <div class="our-services__technical-assistant">
    <Image
      src={wegBlanco}
      class="our-services__technical-assistant-img"
      alt="WEG"
    />
    <div class="our-services__technical-assistant-contain-text">
      <p class="our-services__technical-assistant-text">
        Somos asistentes tecnicos autorizados de la Marca WEG en:
      </p>
      <span class="our-services__technical-assistant-items-list">
        <span class="our-services__technical-assistant-item"
          ><Image
            src={check}
            alt={'Icono'}
            class="our-services__technical-assistant-icon"
          /><p class="our-services__technical-assistant-text">
            Motores eléctricos monofásicos y trifásicos de corriente alterna /
            baja tensión, hasta carcasa IEC 200
          </p></span
        >
        <span class="our-services__technical-assistant-item"
          ><Image
            src={check}
            alt={'Icono'}
            class="our-services__technical-assistant-icon"
          /><p class="our-services__technical-assistant-text">
            Convertidores de frecuencia (baja tensión)
          </p></span
        >
        <span class="our-services__technical-assistant-item"
          ><Image
            src={check}
            alt={'Icono'}
            class="our-services__technical-assistant-icon"
          /><p class="our-services__technical-assistant-text">
            Arranques suaves (baja tensión)
          </p></span
        >
        <span class="our-services__technical-assistant-item"
          ><Image
            src={check}
            alt={'Icono'}
            class="our-services__technical-assistant-icon"
          /><p class="our-services__technical-assistant-text">
            Tableros eléctricos (baja tensión)
          </p></span
        >
      </span>
    </div>
    <Picture
      src={undrawCertificate}
      class="our-services__technical-assistant-img our-services__technical-assistant-img--ilustration"
      formats={['avif', 'webp']}
      alt="Ilustración"
      loading="lazy"
      quality={100}
    />
  </div>
</section>
<style>
  .our-services {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 6rem 2rem;
    background-color: var(--blue);
    gap: 3rem;
    position: relative;
  }
  .our-services__title {
    font-size: 1.25rem;
    color: var(--white);
    font-weight: 700;
    text-shadow: var(--text-shadow);
  }

  .our-services__cards {
    display: grid;
    gap: 1rem;
    width: var(--contain-width);
    grid-template-columns: 1fr;
    grid-template-rows: (auto-fill, minmax(250px, 1fr));

  }

  .our-services__card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    background-color: white;
    border-radius: var(--border-radius);
    border: var(--orange) 0.25rem solid;
    align-items: center;
  }

  .our-services__card-text {
    color: var(--blue);
    font-weight: 600;
    text-align: center;
    font-size: 1rem;

  }
  .our-services__card-svg {
      width: 3rem;
      height: 3rem;
    }
  .our-services__technical-assistant {
    display: grid;
    margin-top: 4rem;
    align-items: center;
    gap: 2rem;
    text-shadow: var(--text-shadow);
    width: var(--contain-width);
    grid-template-rows: auto auto;
  }

  .our-services__technical-assistant-contain-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .our-services__technical-assistant-text {
    font-size: 1rem;
    color: var(--white);
    font-weight: 600;
    text-align: start;
  }
  .our-services__technical-assistant-items-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0;
  }
  .our-services__technical-assistant-item {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    align-items: center;
  }
  .our-services__technical-assistant-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .our-services__technical-assistant-icon {
      height: 2rem;
      width: 2rem;
    }

/* sm: Para dispositivos con un ancho mínimo de 640px (teléfonos grandes y pequeños en horizontal) */
@media (width >= 640px) {
  .our-services__title {
      font-size: 1.5rem;
    }
    .our-services__cards {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(5, 1fr);
    }
    .our-services__card {
      padding: 1rem;
    }
    .our-services__card-svg {
      width: 3rem;
      height: 3rem;
    }
    .our-services__card-text {
      font-size: 1.25rem;
    }
    .our-services__technical-assistant {
      grid-template-rows: auto auto;
    }
   
    .our-services__technical-assistant-text {
      font-size: 1rem;
    }

    .our-services__technical-assistant-icon {
      height: 2rem;
      width: 2rem;
    }
}

/* md: Para dispositivos con un ancho mínimo de 768px (tablets en modo vertical y laptops pequeñas) */
@media (width >= 768px) {
   .our-services__title {
      font-size: 2rem;
    }
    .our-services__cards {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr 1fr 1fr;
    }
    .our-services__card {
      padding: 1rem;
    }
    .our-services__card-svg {
      width: 4rem;
      height: 4rem;
    }
    .our-services__card-text {
      font-size: 1.25rem;
    }
    .our-services__technical-assistant {
      grid-template-columns: 1fr 2fr;
    }
    .our-services__technical-assistant-text {
      font-size: 1.25rem;
    }

    .our-services__technical-assistant-icon {
      height: 2.5rem;
      width: 2.5rem;
    }
}

/* lg: Para dispositivos con un ancho mínimo de 1024px (tablets en modo horizontal y laptops estándar) */
@media (width >= 1024px) {
  .our-services__title {
      font-size: 2rem;
    }

    .our-services__cards {
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr 1fr;
    }
    .our-services__card {
      padding: 1rem;
    }
    .our-services__card-svg {
      width: 5rem;
      height: 5rem;
    }
    .our-services__card-text {
      font-size: 1.5rem;
    }
    .our-services__technical-assistant {
      grid-template-columns: 1fr 2fr 1fr;
    }
    .our-services__technical-assistant-text {
      font-size: 1.25rem;
    }
    .our-services__technical-assistant-img--ilustration {
      display: inline-block;
    }
    .our-services__technical-assistant-icon {
      height: 2.5rem;
      width: 2.5rem;
    }
}

/* xl: Para dispositivos con un ancho mínimo de 1280px (laptops grandes y monitores de escritorio) */
@media (width >= 1280px) {
  .our-services__title {
      font-size: 2rem;
    }
    .our-services__cards {
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr 1fr;
    }
    .our-services__card-svg {
      width: 5rem;
      height: 5rem;
    }

    .our-services__card-text {
      font-size: 1.5rem;
    }
    .our-services__technical-assistant {
      grid-template-columns: 1fr 2fr 1fr;
    }
    .our-services__technical-assistant-text {
      font-size: 1.5rem;
    }
    .our-services__technical-assistant-img--ilustration {
      display: inline-block;
    }
    .our-services__technical-assistant-icon {
      height: 2.5rem;
      width: 2.5rem;
    }
}

/* 2xl: Para dispositivos con un ancho mínimo de 1536px (pantallas ultra grandes y monitores 4K) */
@media (width >= 1536px) {
  .our-services__title {
      font-size: 2.5rem;
    }
    .our-services__cards {
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr 1fr;
    }
    .our-services__card-svg {
      width: 5rem;
      height: 5rem;
    }
    .our-services__card-text {
      font-size: 1.75rem;
    }
    .our-services__technical-assistant {
      grid-template-columns: 1fr 2fr 1fr;
    }
    .our-services__technical-assistant-text {
      font-size: 1.5rem;
    }
    .our-services__technical-assistant-img--ilustration {
      display: inline-block;
    }
    .our-services__technical-assistant-icon {
      height: 3rem;
      width: 3rem;
    }
}
</style>
