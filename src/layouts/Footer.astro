---
import logoIngelec from '@assets/svg/logoIngelec.svg';
import { Image } from 'astro:assets';
---

<footer class="footer" id="contacto">
  <span class="footer__filter"></span>
  <div class="footer__contain">
    <Image src={logoIngelec} class={'footer__logo'} alt="logo" />
    <nav class="footer__nav">
      <h4 class="footer__nav-title">NAVEGACIÃ“N</h4>
      <p class="footer__nav-item">
        <a href="#home" class="footer__nav-link">- Inicio</a>
      </p>
      <p class="footer__nav-item">
        <a href="#servicios" class="footer__nav-link">- Servicios</a>
      </p>
      <p class="footer__nav-item">
        <a href="#marcas" class="footer__nav-link">- Marcas</a>
      </p>
      <p class="footer__nav-item">
        <a href="#nosotros" class="footer__nav-link">- Nosotros</a>
      </p>
      <p class="footer__nav-item">
        <a href="#nuestro-local" class="footer__nav-link">- Nuestro local</a>
      </p>
      <p class="footer__nav-item">
        <a href="#contacto" class="footer__nav-link">- Contacto</a>
      </p>
    </nav>
    <span class="footer__contact">
      <h4 class="footer__contact-title">CONTACTO</h4>
      <p class="footer__contact-item">+54 3456 42-0000</p>
      <p class="footer__contact-item">ingelecsrl01@gmail.com</p>
    </span>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    background-image: url('@assets/png/footerBackground.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .footer__filter {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.8);
  }

  .footer__contain {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    padding: 4rem;
    z-index: 2;
    position: relative;
  }
  .footer__logo {
    height: 5rem;
  }

  .footer__nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: var(--blue);
    justify-self: center;
    align-self: flex-start;
  }

  .footer__nav-title {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .footer__nav-item {
    font-size: 1.2rem;
  }

  .footer__nav-link {
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--blue);
  }

  .footer__contact {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: var(--blue);
    justify-self: end;
    align-self: flex-start;
  }

  .footer__contact-title {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .footer__contact-item {
    font-size: 1.2rem;
  }
</style>
