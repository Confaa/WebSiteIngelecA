    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--blue);
  }

  .footer__contact {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: var(--blue);
    justify-self: end;
    align-self: flex-start;
  }

  .footer__contact-title {
