---
import logoIngelec from '../assets/svg/logoIngelec.svg';
import mail from '../assets/svg/mail.svg';
import smartphone from '../assets/svg/smartphone.svg';
import { Image } from 'astro:assets';
---

<footer class="footer" id="contacto">
  <span class="footer__filter"></span>
  <div class="footer__contain">
    <Image src={logoIngelec} class={'footer__logo'} alt="logo" />
    <nav class="footer__nav">
      <h4 class="footer__nav-title">NAVEGACIÓN</h4>
      <p class="footer__nav-item">
        <a href="#home" class="footer__nav-link">- Inicio</a>
      </p>
      <p class="footer__nav-item">
        <a href="#servicios" class="footer__nav-link">- Servicios</a>
      </p>
      <p class="footer__nav-item">
        <a href="#marcas" class="footer__nav-link">- Marcas</a>
      </p>
      <p class="footer__nav-item">
        <a href="#nosotros" class="footer__nav-link">- Nosotros</a>
      </p>
      <p class="footer__nav-item">
        <a href="#nuestro-local" class="footer__nav-link">- Nuestro local</a>
      </p>
      <p class="footer__nav-item">
        <a href="#contacto" class="footer__nav-link">- Contacto</a>
      </p>
    </nav>
    <span class="footer__contact">
      <h4 class="footer__contact-title">CONTACTO</h4>

      <span class="footer__contact-item-contain">
        <Image
          src={smartphone}
          class={'footer__contact-item-svg'}
          alt="smartphone"
        />
        <p class="footer__contact-item">+54 3456 42-0000</p>
      </span>
      <span class="footer__contact-item-contain">
        <Image src={mail} class={'footer__contact-item-svg'} alt="mail" />
        <p class="footer__contact-item">ingelecsrl01@gmail.com</p>
      </span>
    </span>
  </div>

  <style>
    .footer {
      position: relative;
      background-image: url('../assets/jpg/footerBackground.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    .footer__filter {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(255, 255, 255, 0.8);
    }

    .footer__contain {
      display: grid;
      grid-template-columns: 1fr;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      padding: 4rem;
      z-index: 2;
      position: relative;
    }

    .footer__nav {
      flex-direction: column;
      gap: 0.5rem;
      color: var(--blue);
      justify-self: center;
      align-self: flex-start;
      display: none;
    }

    .footer__nav-title {
      font-size: 1.5rem;
      font-weight: 700;
    }

    .footer__nav-item {
      font-size: 1.2rem;
    }

    .footer__nav-link {
      text-decoration: none;
      font-size: 1.25rem;
      font-weight: 500;
      color: var(--blue);
    }

    .footer__contact {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      color: var(--blue);
      justify-self: center;
      align-self: flex-start;
    }

    .footer__contact-title {
      font-size: 1.5rem;
      font-weight: 700;
    }

    .footer__contact-item-contain {
      display: flex;
      gap: 0.5rem;
      align-items: center;
    }
    .footer__contact-item {
      font-size: 1.25rem;
      font-weight: 500;
    }

    .footer__contact-item-svg {
      height: 2rem;
      width: 2rem;
    }
    .footer__logo {
        display: none;
        height: 5rem;

      }

    /* Estilos base aplicados a todos los tamaños */

/* sm: Para dispositivos con un ancho mínimo de 640px (teléfonos grandes y pequeños en horizontal) */
@media (width >= 640px) {
  /* Tus estilos aquí */
}

/* md: Para dispositivos con un ancho mínimo de 768px (tablets en modo vertical y laptops pequeñas) */
@media (width >= 768px) {
  .footer__contain {
        grid-template-columns: 1fr 1fr;
      }
  
      .footer__contact{
        justify-self: center;
      }
  .footer__logo {
        display: block;
      }
}

/* lg: Para dispositivos con un ancho mínimo de 1024px (tablets en modo horizontal y laptops estándar) */
@media (width >= 1024px) {
  
}

/* xl: Para dispositivos con un ancho mínimo de 1280px (laptops grandes y monitores de escritorio) */
@media (width >= 1280px) {
  .footer__contain {
        grid-template-columns: repeat(3, 1fr);
      }
      .footer__nav{
        display: flex;
      }
      
}

/* 2xl: Para dispositivos con un ancho mínimo de 1536px (pantallas ultra grandes y monitores 4K) */
@media (width >= 1536px) {
  .footer__contain {
        grid-template-columns: repeat(3, 1fr);
      }
      
}
  </style>
</footer>
